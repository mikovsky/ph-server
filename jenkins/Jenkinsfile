pipeline {
    agent any
    tools {
        maven 'maven-3.6.3'
        jdk 'openjdk-11'
    }
    options {
        skipStagesAfterUnstable()
    }
    stages {
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                '''
            }
        }
        stage('Build Project') {
            steps {
                sh 'mvn -DskipTests clean package'
            }
        }
        stage('Run Test') {
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Copy Artifacts') {
            steps {
                sudo sh './jenkins/scripts/copyArtifacts.sh'
            }
        }
    }
}